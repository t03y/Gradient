<?xml version="1.0" encoding="utf-8"?>
<map proto="1.3.3">
  <name>gradient</name>
  <version>1.2.0(β)</version>
  <!--
       更新履歴
       v1.0.0 2015/11/20
        初版
       v1.0.1 2015/11/28
        チームカラー変更
       v1.0.2 2015/11/29
        不要チャンク削除・ファイル構造修正
       v1.1.0 2015/12/1
        観戦者spawn看板修正・xml修正
       v1.1.1 2015/12/7
        Authorの名前変更
       v1.2.0(β) 2018/3/16
        クラス・locale追加(動作テスト)
